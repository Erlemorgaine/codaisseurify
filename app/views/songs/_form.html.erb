<%= form_for [@artist, @artist.songs.new] do |f| %>

  <div class="form-group" id="song-name">
    <label>Name</label>
    <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
  </div>

  <div class="form-group" id="song-year">
    <label>Release year</label>
    <%= f.select :year, (Time.zone.now.year - 100)..(Time.zone.now.year), class: "form-control" %>
  </div>

  <div class="form-group" id="song-album">
    <label>Album</label>
    <%= f.text_field :album, placeholder: "Album", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
