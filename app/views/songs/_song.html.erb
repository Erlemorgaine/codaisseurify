<ul class="song-list">
<% @songs.each do |song| %>
  <li class="song" id="song-<%= song.id %>">
    <label for="song-<%= song.id %>"><%= song.name %> (<%= song.year %>), from the album <i><%= song.album %></i> </label>
    <a href="#" id="delete-song"><%= link_to "[Delete]", [@artist, song], method: :delete %></a>
  </li>
<% end %>
</ul>

<div><a href="#" id="delete-songs">Delete all songs</a></div>
